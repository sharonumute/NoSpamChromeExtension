{
    "name": "YouTube Spam Hider",
    "short_name": "YT Spam Hider",
    "version": "3.0.0",
    "manifest_version": 2,
    "description": "Hide all YouTube spam-comments on the current screen",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action" :
    {
      "default_icon" : "icon-19.png",
      "default_title" : "Hide YouTube Spam"
    },
    "permissions" : [
      "declarativeContent",
      "activeTab"
    ],
    "content_scripts":
    [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "icons" : {
      "48" : "icon-48.png",
      "128" : "icon-128.png"
    }
  }